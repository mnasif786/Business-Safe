@model BusinessSafe.MessageHandlers.Emails.ViewModels.ReviewAssignedEmailViewModel
<head>
    <style>
        body
        {
            background-color: white;
            font-size: .85em;
            font-family: "Trebuchet MS" , Verdana, Helvetica, Sans-Serif;
            margin: 0;
            padding: 0;
            color: #393939;
        }
        
        h1
        {
            font-size: 2em;
            padding-bottom: 0;
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    
    <h1>
        New Risk Assessment Review
    </h1>

    <p>
        The following review has been assigned to you:
    </p>
    <p>
        <b>Reference:</b> @Model.TaskReference<br/>
        <b>Title:</b> @Model.TaskTitle<br/>
        <b>Description:</b> @Model.TaskDescription<br/>
        <b>Assigned By:</b> @Model.AssignedBy<br/>
    </p>
    <p>
        The Risk Assessment Review has been assigned to you and should be completed by <b>@Model.CompletionDueDate</b>.
        Details of the review can be found be viewing your Task List in BusinessSafe Online. To view and complete the review,
        please log into BusinessSafe Online using the following link @Model.TaskListUrl
    </p>

</body>

