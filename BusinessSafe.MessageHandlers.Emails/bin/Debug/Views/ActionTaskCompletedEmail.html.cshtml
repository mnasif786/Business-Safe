@model BusinessSafe.MessageHandlers.Emails.ViewModels.ActionTaskCompletedViewModel
<head>
    <style>
        body
        {
            background-color: white;
            font-size: .85em;
            font-family: "Trebuchet MS" , Verdana, Helvetica, Sans-Serif;
            margin: 0;
            padding: 0;
            color: #393939;
        }
        
        h1
        {
            font-size: 2em;
            padding-bottom: 0;
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <h1>
        BusinessSafe Online - @Model.Subject
    </h1>
    <p>
        The following @Model.TaskType Task has been completed.
    </p>
    <p>
        @Model.TaskReferenceLabel: @Model.TaskReference
    </p>
    @if(Model.IsIrn)
    {
        <p>
            Title: @Model.Title
        </p>    
    }
    else
    {
        <p>
            Area of Non Compliance: @Model.AreaOfNonCompliance
        </p>
    }
    <p>
        @Model.ActionRequiredLabel: @Model.ActionRequired
    </p>
    <p>
        Assigned To: @Model.AssignedTo
    </p>
    <p>
        The @Model.TaskType Task has now been completed by @Model.AssignedTo. To view and complete the
        task, please log into BusinessSafe Online on the following link.
        @Model.BusinessSafeOnlineLink
    </p>
</body>
