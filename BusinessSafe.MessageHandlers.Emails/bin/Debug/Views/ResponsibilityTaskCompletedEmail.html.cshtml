@model BusinessSafe.MessageHandlers.Emails.ViewModels.ResponsibilityTaskCompletedViewModel
<head>
    <style>
        body
        {
            background-color: white;
            font-size: .85em;
            font-family: "Trebuchet MS" , Verdana, Helvetica, Sans-Serif;
            margin: 0;
            padding: 0;
            color: #393939;
        }
        
        h1
        {
            font-size: 2em;
            padding-bottom: 0;
            margin-bottom: 0;
        }
        
        strong { font-weight: bold }
    </style>
</head>
<body>
    <h1>BusinessSafe Online - Responsibility Task Completed</h1>
    <p>The following Responsibility Task has been completed:</p>
    <p>
        <strong>Title:</strong> @Model.Title<br />
        <strong>Description:</strong> @Model.Description<br />
        <strong>Assigned To:</strong> @Model.TaskAssignedTo
    </p>
    <p>The Responsibility Task has now been completed by @Model.CompletedBy. To view and complete the
        task, please log into BusinessSafe Online on the following link: @Model.BusinessSafeOnlineLink
    </p>
</body>
