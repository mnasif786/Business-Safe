@model BusinessSafe.WebSite.ViewModels.RiskAssessmentHazardSummaryViewModel
<fieldset class="well">
    <legend><h3>Risk Assessment Details</h3></legend>
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <label class="span2">Risk Assessment</label>
        <strong>@Model.RiskAssessmentTitle</strong>
    </div>
    <div class="row">
        <label class="span2">Hazard</label>
        <strong>@Model.RiskAssessmentHazardName</strong>
    </div>
    <div class="row">
        <label class="span2">Hazard Description</label>
        <strong>@Model.RiskAssessmentHazardDescription</strong>
    </div>
</fieldset>
