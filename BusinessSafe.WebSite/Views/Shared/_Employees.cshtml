@model IEnumerable<Tuple<Guid, string>>
<div class="span6">
    <div class="row">
        <label id="employeeTitle" class="span2">Employees</label>
        <input id="employeesName" name="employeesName" class="ui-autocomplete-input attachEmployeeAutoComplete"
               autocomplete="off" role="textbox" aria-autocomplete="list" aria-haspopup="true" />
        <input id="employeesNameId" name="employeesNameId" type="hidden" />
    </div>
    <div class="row">
        <label class="span2"></label>
        <select id="employeesMultiSelect" multiple="multiple" class="employeesMultiSelect span3">
            @if (Model != null)
            {
                foreach (var employee in Model)
                {
                <option value="@employee.Item1" >@employee.Item2</option>
                }
            }
        </select>
        <button id="removeEmployeesBtn" class="btn btn-danger hide detachEmployee">Remove</button>
    </div>
</div>
