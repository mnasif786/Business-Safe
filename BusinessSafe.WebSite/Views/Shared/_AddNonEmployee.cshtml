@model BusinessSafe.WebSite.Areas.Company.ViewModels.NonEmployeeViewModel
<div id="dialogAddNonEmployee" title="Non-Employee">
    <form id="@Model.FormName" class="">
        <fieldset>
            <legend><h3>Add Non-Employee</h3></legend>
            <div class="row-fluid row">
                <div class="span6">
                    <label class="span2" for="Name">Name</label>
                    <input type="text" class="span3" id="Name" Name="Name" value="@Model.Name"/>
                </div>
            </div>
            <div class="row-fluid row">
                <div class="span6">
                    <label class="span2" for="Company">Company</label>
                    <input type="text" class="span3" id="Company" Name="Company" value="@Model.Company" />
                </div>
            </div>
            <div class="row-fluid row">
                <div class="span6">
                    <label class="span2" for="Position">Position</label>
                    <input type="text" class="span3" id="Position" Name="Position" value="@Model.Position" />
                </div>
            </div>
            @Html.HiddenFor(x => x.NonEmployeeId)
            @Html.HiddenFor(x => x.CompanyId)
            @Html.HiddenFor(x => x.RiskAssessmentId)
            <div id="validationDisplay" class="hide validation-summary-errors">
                <ul>
                </ul>
            </div>
            @Html.Partial("_MatchingDefaults")
        </fieldset>
            <div class="row-fluid row">
                <div class="span6">
                    <label class="span2"></label>
                    @if (Model.IsSaveButtonEnabled(User))
                    {
                        <button id="@Model.SaveNonEmployeeButtonId" type="button" class="btn btn-primary ">
                            @Model.SaveNonEmployeeButtonText</button>
                    }
                    <button id="cancelBtn" class="btn btn-link">Cancel</button>
                </div>
        </div>
    </form>
</div>
