@using BusinessSafe.WebSite.Extensions
@{
    var viewName = Html.IsReadOnly() ? "View" : "Index";
    var areaName = @ViewContext.RouteData.DataTokens["Area"];
    var urlAction = Url.Action(viewName, "Review", new { area = areaName, companyId = Model.CompanyId, riskAssessmentId = Model.RiskAssessmentId });
}
<div class="span12 ipad-risk-assessment-attached-document">
    <label class="span2"></label>
    @if (Model.IsSaveButtonEnabled(User))
    {
        <input type="submit" id="saveButton" value="Save" class="btn btn-success" />
        <a id="nextBtn" class="btn btn-primary" mainurl="Hazards" tabindex="2" href="@urlAction">Save &amp; Continue <i class="icon-chevron-right icon-white"></i></a>
        <a class="btn btn-link" href="@Url.Action("Index", "RiskAssessment", new { area = areaName, companyId = @Html.GetUsersCompanyId(User) })">Cancel</a>
    }
</div>