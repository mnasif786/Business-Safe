@model BusinessSafe.WebSite.Areas.Responsibilities.ViewModels.CompleteResponsibilityTaskViewModel
@using (Html.BeginForm("Complete", "Responsibility", FormMethod.Post, new {id = "ActionTask", @class = "form-inline"}))
{
    <div class="readonly">
        @Html.Partial("_ResponsibilitySummary", Model.ResponsibilitySummary)
        @Html.Partial("_ReadOnlyResponsibilityTaskDetail", Model.ResponsibilityTask)
    </div>

    @Html.Partial("_CompleteResponsibilityTaskDetails", Model)

    <div class="row">
        <label class="span2">
        </label>
        <button type="submit" class="btn btn-primary disabled" id="TaskSaveButton">Complete Task</button>
        <button class="btn btn-link" id="TaskCancelButton">Cancel</button>
    </div>


    <script type="text/javascript">
        new SetFormToReadOnly('.readonly').execute();
    </script>
}