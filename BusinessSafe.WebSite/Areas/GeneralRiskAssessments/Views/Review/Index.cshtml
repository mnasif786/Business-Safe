@using BusinessSafe.WebSite.Areas.GeneralRiskAssessments.ViewModels
@model GeneralRiskAssessmentReviewsViewModel
@{
    ViewBag.Title = "Review";
}
@Html.Partial("_RiskAssessmentSummary", ViewBag.RiskAssessmentSummary as GeneralRiskAssessmentSummaryViewModel)
<div class="container ipad-container">
    
    @{
        var generalRiskAssessmentTabViewModel = ViewBag.TabViewModel as GeneralRiskAssessmentTabViewModel;
    }
    @Html.Partial("_Tabs", generalRiskAssessmentTabViewModel)
    @Html.Hidden("SelectedTabIndex", 5)
    <div id="review-wrapper" class="fixed-content">
        @Html.Partial("_TitleBar", ViewBag.RiskAssessmentSummary as GeneralRiskAssessmentSummaryViewModel)
        <div class="risk-assessment-review-index">
            @Html.Hidden("RiskAssessmentId", @Model.ReviewViewModel.RiskAssessmentId)
            @Html.Hidden("CompanyId", @Model.ReviewViewModel.CompanyId)
            @Html.Partial("_RiskAssessmentReviews", Model.ReviewViewModel)
        </div>
    </div>
</div>
<div class="hide">
    <div id="AddRiskAssessmentReviewDialog" title="Add Risk Assessment Review">
    </div>
    <div id="completeTaskDialog" title="Risk Assessment Review">
    </div>
</div>
@section JavaScriptSection
{
    <script type="text/javascript">
        $(document).ready(function () {
            riskAssessmentReviewsManager.initialize();
        });        
   </script>
}