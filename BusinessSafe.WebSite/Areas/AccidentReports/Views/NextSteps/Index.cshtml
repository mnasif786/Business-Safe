@{
    ViewBag.Title = "Next Steps";
}
@Html.Partial("_AccidentRecordSummary", ViewBag.AccidentRecordSummary as AccidentSummaryViewModel)
<div class="container ipad-container">
    @Html.Partial("_Tabs", ViewBag.TabViewModel as AccidentRecordTabsViewModel)
    <div class="fixed-content row">
        @Html.Partial("_TitleBar", ViewBag.AccidentRecordSummary as AccidentSummaryViewModel)
        <div class="span11 next-steps">
            @if (Model.SectionsToShow.Contains(NextStepsSectionEnum.Section1))
            {
                <h3>
                    <img src="/Content/images/red-arrow.gif" />Accident Investigation</h3>
                <p>
                    All work related accidents should be investigated to ascertain the underlying causes
                    and to identify measures that could be taken to prevent a similar accident in the
                    future. The investigation should be proportionate to the actual or potential severity
                    of the accident. The <a href='@Url.Action("DownloadClientDocument", "Document", new { area = "Documents", enc = EncryptionHelper.Encrypt("clientDocumentId=" + Model.AccidentInvestigationFormClientDocumentationId) })' >
                                             accident investigation form </a>is designed to help capture information which
                    will reveal the underlying cause and help you advisers or insurers deal with any
                    subsequent personal injury claim. On completion the report should be linked to this
                    report as an ’attached document’.</p>	

            }
            @if (Model.SectionsToShow.Contains(NextStepsSectionEnum.Section2_1))
            {
                <h3>
                    <img src="/Content/images/red-arrow.gif" />Further Information</h3>
                <p>
                    Detailed information about the reporting requirements and associated legislation
                    can be found in 
                    <a href='@Url.Action("DownloadClientDocument", "Document", new { area = "Documents", enc = EncryptionHelper.Encrypt("clientDocumentId=" + Model.GbAccidentReportGuidanceNoteClientDocumentationId) })' >
                        Guidance Note 1-3. 
                    </a>
                </p>	
            }
            @if (Model.SectionsToShow.Contains(NextStepsSectionEnum.Section2_2))
            {
                <h3>
