    </li>
    <li class="@Model.IsTabActive(AccidentRecordTabs.Accident.ToString())">
        @Html.ActionLink("Accident", Model.IsReadOnly ? "View" : "Index", "AccidentDetails", new { area = "AccidentReports", accidentRecordId = Model.Id, Model.CompanyId }, new { id = "accidentdetails", @class = "riskassessment-tab-links summarylink", @mainUrl = "AccidentDetails", @tabIndex = "3" })
    </li>
    <li class="@Model.IsTabActive(AccidentRecordTabs.Injury.ToString())">
        @Html.ActionLink("Injury", Model.IsReadOnly ? "View" : "Index", "InjuryDetails", new { area = "AccidentReports", accidentRecordId = Model.Id, Model.CompanyId }, new { id = "injurydetails", @class = "riskassessment-tab-links summarylink", @mainUrl = "InjuryDetails", @tabIndex = "4" })
    </li>
