@using BusinessSafe.WebSite.Areas.AccidentReports.ViewModels
@model AccidentRecordTabsViewModel
@Html.Hidden("CurrentStatus", (int)Model.CurrentTab)
<ul class="nav nav-pills">
    <li class="@Model.IsTabActive(AccidentRecordTabs.Summary.ToString())">
