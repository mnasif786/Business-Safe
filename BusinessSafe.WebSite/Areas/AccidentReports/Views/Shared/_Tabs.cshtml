    {
        <li class="@Model.IsTabActive(AccidentRecordTabs.NextSteps.ToString())">
            @Html.ActionLink("Next Steps", Model.IsReadOnly ? "View" : "Index", "NextSteps", new {area = "AccidentReports", accidentRecordId = Model.Id, Model.CompanyId}, new {id = "nextsteps", @class = "riskassessment-tab-links summarylink", @mainUrl = "NextSteps", @tabIndex = "6"})
        </li>
    }
</ul>