@model BusinessSafe.WebSite.ViewModels.HazardsViewModel
<fieldset class="">
    <legend class="span12">
        <h3>
            Fire Safety Control Measures</h3>
    </legend>
    <div class="row">
        <div class="span2">
            <label style="margin-left: 30px;">
                Control Measure</label>
        </div>
        <div id="fire-safety-control-measures-multi-select" class="search-and-multi-select">
            <div class="row">
                <input type="text" id="AddFireSafetyControlMeasure" name="AddFireSafetyControlMeasure"
                    class="input-xlarge" placeholder="Add New Fire Safety Control Measure" />
                <button id="AddNewFireSafetyControlMeasure" type="submit" class="btn">
                    +</button>
            </div>
            <div class="row">
                <ul id="FireSafetControlMeasureOptions" class="available-options options span4 offset2">
                    @foreach (var option in Model.FireSafetyControlMeasures)
                    {
                        <li data-value="@option.Id">@option.Name</li>
                    }
                </ul>
                <div class="span1 span1fix">
                    <input type="button" class="add-to-selected btn" value="&gt;" />
                    <input type="button" class="remove-from-selected btn" value="&lt;" />
                </div>
                <select id="FireSafetyControlMeasureIds" name="FireSafetyControlMeasureIds" class="selected-options options span4"
                    multiple="multiple">
                    @foreach (var option in Model.SelectedFireSafetyControlMeasures)
                    {
                        <option data-value="@option.Id" value="@option.Id">@option.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
</fieldset>
