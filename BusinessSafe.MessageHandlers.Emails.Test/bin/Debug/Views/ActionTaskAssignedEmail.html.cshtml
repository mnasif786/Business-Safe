@model BusinessSafe.MessageHandlers.Emails.ViewModels.TaskAssignedEmailViewModel
<head>
    <style>
        body
        {
            background-color: white;
            font-size: .85em;
            font-family: "Trebuchet MS" , Verdana, Helvetica, Sans-Serif;
            margin: 0;
            padding: 0;
            color: #393939;
        }
        
        h1
        {
            font-size: 2em;
            padding-bottom: 0;
            margin-bottom: 0;
        }
        
    </style>
</head>
<body>
    
    <h1>
        @Model.EmailTitle
    </h1>

    <p>
        The following @Model.TaskType has been assigned to you:
    </p>
    <p>
        @if (Model.IncludeReference)
        {
            <b>@Model.ReferenceTagTitle:</b> @Model.TaskReference<br/>
        }
        
        @if (Model.IsIRN)
        {
            <b>Title:</b> @Model.TaskTitle<br/>
        }
        
        <b>Action Required:</b> @Model.ActionRequired<br/>
       
        <b>@Model.ActionRequiredTagTitle:</b> @Model.AssignedBy<br/>
    </p>
    <p>
        The @Model.TaskType has been assigned to you and should be completed by <b>@Model.CompletionDueDate</b>.
        Details of the task can be found be viewing your Task List in BusinessSafe Online. To view and complete the task,
        please log into BusinessSafe Online using the following link @Model.TaskListUrl
    </p>

</body>
